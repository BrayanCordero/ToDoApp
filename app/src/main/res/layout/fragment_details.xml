        <TextView
            android:id="@+id/event_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EVENT NAME"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/event_category_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="CATEGORY"
            app:layout_constraintTop_toBottomOf="@+id/event_name_details"
            tools:layout_editor_absoluteX="0dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/event_date_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="DATE"
            app:layout_constraintTop_toBottomOf="@+id/event_category_details"
            tools:layout_editor_absoluteX="0dp"
            android:textAlignment="center"/>


